<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Loading">
        <item name="matProg_barColor">@color/colorAccent</item>
        <item name="matProg_progressIndeterminate">true</item>
    </style>

    <style name="shadowedText">
        <item name="android:padding">@dimen/space_1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_font</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>


</resources>
