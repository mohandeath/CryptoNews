<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView


            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/imageCover"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_image_h"
                    android:background="@color/colorPrimary"
                    android:elevation="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/detail_image_h"
                    android:background="@drawable/cover_gradient"
                    android:elevation="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />




            <ImageView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_2"
                    android:layout_marginLeft="@dimen/space_2"
                    android:layout_marginTop="@dimen/space_2"
                    android:elevation="3dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageCover"
                    app:srcCompat="@drawable/ic_back" />

            <TextView
                    android:id="@+id/textSourceUrl"
                    style="@style/shadowedText"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/space_0"

                    android:text="usethebitcoin.com :"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />



            <TextView
                    android:id="@+id/textTitle"
                    style="@style/shadowedText"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/space_1"
                    android:lineSpacingExtra="@dimen/space_0"
                    android:text="Erik Zhang Says They Don’t Rule Out The Possibility Of Changing NEO’s Total Supply"
                    android:textSize="@dimen/text_size_title"
                    app:layout_constraintBottom_toBottomOf="@+id/imageCover"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/space_2"
                    android:background="@drawable/outline_rect"
                    android:lineSpacingExtra="@dimen/space_0"
                    android:padding="@dimen/space_2"
                    android:text="In today’s guide, we will explain how to buy IOTA on Binance in detailed steps to help you acquire the crypto easily. What Is IOTA? IOTA is an Internet of Things (IoT) project created in 2015 by Sergey Ivancheglo, David Sontesbo, Serguei Popov, and Dominik. The IOTA crypto was designed to facilitate…"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageCover" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
            android:id="@+id/btnReadMore"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/read_more"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
